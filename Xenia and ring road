import java.util.*;
 
public class Main {
	public static void main(String[] args) {
		Scanner s = new Scanner(System.in);
		long n = s.nextInt(), m = s.nextInt(), a = 1, count = 0;
		for (int i = 0; i < m; i++) {
			long b = s.nextInt();
			count += a <= b ? b-a : n-a+b;
			a = b;
		}
		System.out.println(count);
	}
}
