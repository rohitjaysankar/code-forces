import java.util.*;
import java.io.*;
public class Main
{
    public static void main(String args[])
    {
        Scanner scan=new Scanner(System.in);
     long  n=scan.nextLong();
     long  m=scan.nextLong();
     long  b; 
     if(n%2==0)
     {
         n=n/2;
     }
     else
     {
         n=n/2 + 1;
     }
     if(m<=n)
     {
         b=(m-1)*2+1;
         System.out.println(b);
         return;
         
     }
      b=(m-n)*2;
       System.out.println(b);
       return ;
 
    }
}
